<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <!--sms servers settings-->
    <sms_servers>
        <server>
            <channel>megafon1</channel>
            <host>localhost</host>
            <send-port>2775</send-port>
            <receive-port>2775</receive-port>
            <username>smppclient1</username>
            <password>password</password>
            <source-addr>channel1</source-addr>
            <source-addr-ton>1</source-addr-ton>
            <source-addr-npi>1</source-addr-npi>
            <dest-addr-ton>1</dest-addr-ton>
            <dest-addr-npi>1</dest-addr-npi>
            <system-type>VMA</system-type>
            <message-per-second>40</message-per-second>
            <recconnect-timeout>30</recconnect-timeout>
            <enquire-link-interval>60</enquire-link-interval>
            <is-fake-channel>true</is-fake-channel>
        </server>
        <server>
            <channel>smscru</channel>
            <channel-queue>smscru</channel-queue>
            <host>localhost</host>
            <send-port>2775</send-port>
            <receive-port>2775</receive-port>
            <bind-mode>t</bind-mode>
            <enable-playload>false</enable-playload>
            <username>smppclient1</username>
            <password>password</password>
            <source-addr>channel2</source-addr>
            <source-addr-ton>5</source-addr-ton>
            <source-addr-npi>1</source-addr-npi>
            <dest-addr-ton>1</dest-addr-ton>
            <dest-addr-npi>1</dest-addr-npi>
            <system-type>SINGLE</system-type>
            <recconnect-timeout>30</recconnect-timeout>
            <max-message>12</max-message>
            <message-per-second>100</message-per-second>
            <enquire-link-interval>60</enquire-link-interval>
            <wait-resend-timeout>5</wait-resend-timeout>
            <is-fake-channel>false</is-fake-channel>
        </server>
    </sms_servers>
    <channel_users>
        <user>
            <username>alfss</username>
            <password>test</password>
            <channel>smscru</channel>
        </user>
        <user>
            <username>alfss1</username>
            <password>test</password>
            <channel>megafon1</channel>
        </user>
    </channel_users>
    <!--rabbit-->
    <rabbit_host>10.211.55.3</rabbit_host>
    <rabbit_port>5672</rabbit_port>
    <rabbit_vhost>/</rabbit_vhost>
    <rabbit_queue>message</rabbit_queue>
    <rabbit_user>guest</rabbit_user>
    <rabbit_password>guest</rabbit_password>
    <!--redis-->
    <redis_max_pool>30</redis_max_pool>
    <redis_timeout>10</redis_timeout>
    <redis_host>10.211.55.3</redis_host>
    <redis_port>6379</redis_port>
    <redis_db>0</redis_db>
    <!--http -->
    <http-address>0.0.0.0</http-address>
    <http-port>8082</http-port>
    <http-min-pool>10</http-min-pool>
    <http-max-pool>20</http-max-pool>
    <http-out-buffer>32768</http-out-buffer>
    <http-req-header>8192</http-req-header>
    <http-res-header>8192</http-res-header>
</configuration>